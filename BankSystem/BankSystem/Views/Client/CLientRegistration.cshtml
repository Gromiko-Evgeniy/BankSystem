@model  BankSystem.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <!--link rel="stylesheet" href="/lib/bootstra/dist/css/bootstrap.min.css" /-->
</head>
<body class="p-2">
    <hЗ class="text-center">Enter your personal data</hЗ>
    <form asp-action="CLientRegistration" asp-controller="Client" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="FirstName">First name:</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last name:</label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PassportNum">Passport number:</label>
            <input asp-for="PassportNum" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PersonalID">Personal ID:</label>
            <input asp-for="PersonalID" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone number:</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">E-mail:</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn">Submit</button>
            <button type="reset" class="btn">Reset</button>
            <a asp-action="Welcome" asp-controller="Start">Back</a>
        </div>
    </form>
</body>
</html>
